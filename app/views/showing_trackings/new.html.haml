.wrapper.wrapper-content.animated.fadeInRight
  .row
    .col-sm-6.col-sm-offset-3
      -#validates errors div
      = render "layouts/validation_errors", :model => @showing_tracking
  .row
    .col-lg-7
      .ibox.float-e-margins
        .ibox-title
          %h3
            Track a New Showing
        .ibox-content
          .row
            .col-sm-10

              -# %h3.m-t-none.m-b Create a Contact
              -# %p Sign in today for more expirience.
              = form_for [@contact, @showing_tracking] do |f|
                .form-group
                  = f.label :showing_street_address__c, "Street Address"
                  = f.text_field :showing_street_address__c, class: "form-control"
                .form-group
                  = f.label :showing_city__c, "City"
                  = f.text_field :showing_city__c, class: "form-control"
                  .form-group
                  = f.label :showing_price__c, "Price"
                  = f.number_field :showing_price__c, class: "form-control"
                  .form-group
                  = f.label :showing_square_footage__c, "Square Footage"
                  = f.number_field :showing_square_footage__c, class: "form-control"
                  .form-group
                  = f.label :showing_of_bedrooms__c, "Num of Bedrooms"
                  = f.number_field :showing_of_bedrooms__c, class: "form-control"
                  .form-group
                  = f.label :showing_of_bathrooms__c, "Num of Bathrooms"
                  = f.number_field :showing_of_bathrooms__c, class: "form-control"
                .form-group
                  = f.label :showing_general_condition__c, "General Condition"
                  = f.hidden_field :showing_general_condition__c, id: "general_condition"
                .form-group
                  = f.label :showing_neighborhood__c, "Neighborhood"
                  = f.hidden_field :showing_neighborhood__c, id: "neighborhood"
                .form-group
                  = f.label :showing_commute__c, "Commute"
                  = f.hidden_field :showing_commute__c, id: "commute"
                .form-group
                  = f.label :showing_exterior__c, "Exterior"
                  = f.hidden_field :showing_exterior__c, id: "exterior"
                .form-group
                  = f.label :showing_kitchen__c, "Kitchen"
                  = f.hidden_field :showing_kitchen__c, id: "kitchen"
                .form-group
                  = f.label :showing_notes__c, "Notes"
                  = f.hidden_field :showing_notes__c, class: "form-control"
                .form-group
                  = f.submit "Create", class: "btn btn-primary"



